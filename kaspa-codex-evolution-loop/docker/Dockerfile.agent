FROM node:22-alpine AS deps
WORKDIR /app
COPY package*.json ./
RUN npm ci

FROM deps AS build
WORKDIR /app
COPY tsconfig.json ./
COPY agent ./agent
COPY simulation ./simulation
COPY analytics ./analytics
COPY tests ./tests
RUN npm run build

FROM node:22-alpine
WORKDIR /app
ENV NODE_ENV=production
COPY package*.json ./
RUN npm ci --omit=dev && npm cache clean --force
COPY --from=build /app/dist ./dist
COPY simulation ./simulation
COPY knowledge_base ./knowledge_base
CMD ["node", "dist/agent/coreLoop.js"]
