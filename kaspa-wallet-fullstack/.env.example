# Backend runtime
BACKEND_PORT=8080
FRONTEND_PORT=3000

# Point this to a real Kaspa testnet node gRPC endpoint (host:port)
KASPA_RPC_TARGET=host.docker.internal:16210
KASPA_NETWORK=testnet-10
KASPA_ALLOWED_ADDRESS_PREFIXES=kaspatest

# Optional distributed rate-limit storage
REDIS_URL=redis://redis:6379

# Update before production
JWT_SECRET=replace-with-strong-secret
ALLOW_UNVERIFIED_WALLET_SIG=true
